<h1>Sensor Readings</h1>

<?php if ($this->sensorReadings) : ?>
	<dl>
		<?php foreach ($this->sensorReadings as $sensor => $value) : ?>
		<dt><?php echo $this->escapehtml($sensor); ?></dt>
			<dd><?php echo $this->escapehtml($value); ?></dd>
		<?php endforeach; ?>
	</dl>
<?php else : ?>
	<p>Sensors offline</p>
<?php endif; ?>